@{
    Layout = "~/Views/Shared/_Masterlayout.cshtml";
}
<html>
<head>
    <title>Tinh Tien</title>
    <meta http-equiv="content-type" content="text/html" charset="utf-8" />
    <script>
        function CalculateTotal() {
            var dg = parseFloat(document.getElementById("iPrice").value);
            var sl = parseFloat(document.getElementById("iQuantity").value);
            if (dg < 1) alert("Đơn giá phải lớn hơn 0");
            else if (sl <= 0 || sl >= 15) alert("Số lượng phải từ 1 đến 15");
            else window.document.getElementById("lbTotal").value = dg * sl;
        }
        function selectProduct(obj) {
            var errMsg = document.getElementById(err_msg);
            var value = obj.value;
            if (value == '') {
                err_msg.innerHHTML = "Hãy chọn skin";
            }
        }

    </script>
</head>
<body>
    Nhập Số Lượng Và Đơn Gía
    <form method="post">
        Mặt Hàng: <select id="product" onchange="selectProduct(this);">
        <option></option>
    <option>T1 Jayce</option>
    <option>T1 LeeSin</option>
    <option>T1 Orianna</option>
    <option>T1 Jinx</option>
    <option>T1 Bard</option>
</select>
        <p style="color:lightpink" id="err_msg"></p>
        Đơn giá: <input type="number" id="iPrice" name="Price" value="0" />
        Số Lượng: <input type="number" id="iQuantity" name="Quantity" min="0" max="15" onchange="CalculateTotal();" />
        Thành tiền: <input type="text" id="lbTotal" name="Total"/>
        <br/>
    </form>
</body>
</html>

